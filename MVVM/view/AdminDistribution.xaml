<Window x:Class="MVVM.AdminDistributionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM"
        xmlns:vm="clr-namespace:MVVM.VM"
        
        mc:Ignorable="d"
        Title="Window1" MinHeight="265" MinWidth="590" MaxHeight="265" MaxWidth="590">
    <Window.DataContext>
        <vm:AdminDistributionViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Создать Фильм"  Margin="5"  Grid.Column="0" Command="{Binding CreateAddMovieWindow}"/>

        <Button Content="Создать Актёра"  Margin="5"  Grid.Column="1" Command="{Binding CreateActorWindow}"/>
        <Button Content="Создать Сеанс"  Margin="5"  Grid.Column="2" Command="{Binding CreateAddSenseWindow}"/>

    </Grid>
</Window>
